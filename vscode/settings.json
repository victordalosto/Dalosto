    // CUSTOMIZATION
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            { // IMPORTS, PACKAGE,
                "scope": "storage.type.annotation.kotlin, storage.type.annotation.java, punctuation.definition.annotation, storage.modifier.import.java, keyword.control.import.ts, keyword.control.from.ts, entity.name.namespace, storage.modifier.package.java, meta.package.java, punctuation.separator.java, keyword.other.import.java, keyword.other.package.java",
                "settings": {
                    "foreground": "#999996",
                    "fontStyle": "italic"
                }
            },
            { // React classes (components)
                "scope": "storage.type.tsx, support.class.component.tsx, entity.name.tag.tsx",
                "settings": {
                    // "foreground": "#FF79C6",
                    "foreground": "#FF2E97",
                    "fontStyle": ""
                }
            },
            { // ACESSOR: public, private, proteced
                "scope": "source.tsx, storage.type.class.ts, storage.type.primitive.java, storage.modifier, storage.modifier.cs, storage.modifier.java, storage.modifier.ts, storage.modifier.implements.java, storage.modifier.extends.java",
                "settings": {
                    // "foreground": "#FF79C6",
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                }
            },
            { // Types
                //, entity.name.namespace
                "scope": "entity.name.function.java, entity.other.attribute-name.tsx, entity.name.type, hcl-blockType, terraform-variable, entity.name.type.struct, entity.name.type.cs, keyword.type.cs, entity.name.type.enum, entity.name.type.ts, storage.type.primitive.java, support.type.primitive.ts, support.class, entity.name.type.interface, entity.name.type.class",
                "settings": {
                    "foreground": "#00FFFF", //4de0ff
                    "fontStyle": "",
                }
            },
            { // Types
                //, json
                "scope": "support.type.property-name.json.comments",
                "settings": {
                    "foreground": "#00FFFF", //4de0ff
                    "fontStyle": "",
                }
            },
            { // HTML
                //, entity.name.namespace
                "scope": "entity.other.attribute-name.html",
                "settings": {
                    "foreground": "#00FFFF",
                    "fontStyle": "italic",
                }
            },
            { // methods
                "scope": "entity.name.function.extension.cs, entity.name.function.member, variable.other.object.ts",
                "settings": {
                    "foreground": "#15ff5b", //"#50FA7B"
                    "fontStyle": ""
                }
            },
            { // variable method parameter
                "scope": "variable.parameter, entity.name.variable.parameter.cs",
                "settings": {
                    "foreground": "#FFB86C",
                    "fontStyle": ""
                }
            },
            { // variable created inside method
                "scope": "meta.jsx.children.tsx, entity.name.variable.local.cs, variable.other.readwrite.cs, variable.other.constant, variable.other, variable.parameter",
                "settings": {
                    "foreground": "#fffffff5",
                    "fontStyle": ""
                }
            },
            { // String
                "scope": "string, punctuation.definition.string, string.quoted.triple.java",
                "settings": {
                    "foreground": "#F1FA8C",
                    "fontStyle": ""
                }
            },
            { // Comments
                "scope": "comment, punctuation.definition.comment",
                "settings": {
                    "foreground": "#6272A4",
                    "fontStyle": ""
                }
            },
            { // keywords
                "scope": "meta.arrow.tsx, storage.type.function.arrow.tsx, storage.type.class.js, entity.name.tag, storage.type.function.js, storage.type.js, storage.type.function.ts, storage.type.ts,keyword.control, storage.type.interface.ts",
                "settings": {
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                    // "foreground": "#FF1BF0", "fontStyle": ""
                }
            },
            { // HTML Tags
                "scope": "punctuation.definition.tag.end.html, punctuation.definition.tag.begin.html",
                "settings": {
                    "foreground": "#747272",
                    "fontStyle": ""
                }
            },
            { // HTML Tags
                "scope": "entity.name.tag.js",
                "settings": {
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                }
            },
            { // HTML Tags ==
                "scope": "punctuation.separator.key-value.html",
                "settings": {
                    "foreground": "#747470dc",
                    "fontStyle": ""
                }
            },
            { // HTML DIAMONDS < >
                "scope": "punctuation.definition.tag.begin.js, punctuation.definition.tag.end.js",
                "settings": {
                    "foreground": "#747470dc",
                    "fontStyle": "bold"
                }
            },
            { // return, new,
                "scope": "source.asp.vb.net, keyword.operator.expression.new, keyword, keyword.operator.new, keyword.control.java",
                "settings": {
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                    // "foreground": "#9f77d7", "fontStyle": ""
                }
            },
            { // this
                "scope": "variable.language.this.java, variable.language.this.ts, variable.language.this",
                "settings": {
                    "foreground": "#FF1BF0",
                    "fontStyle": "italic"
                }
            },
            { // ponctuator
                "scope": "ponctuation, punctuation.definition, meta.brace, punctuation.section, punctuation.bracket.round",
                "settings": {
                    // "foreground": "#FF1BF0", "fontStyle": ""
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                }
            },
            { // diamonds <>
                "scope": "punctuation.definition.typeparameters.begin, punctuation.definition.typeparameters.end",
                "settings": {
                    "foreground": "#ffffff",
                    "fontStyle": "bold",
                }
            },
            { // .
                "scope": "punctuation.accessor.tsx, punctuation.separator.comma.tsx, punctuation.separator.period.java, ponctuation.acessor, punctuation.accessor.ts, meta.method.identifier.java",
                "settings": {
                    "foreground": "#9f9f99",
                    "fontStyle": ""
                }
            },
            { // && > < <= >=
                "scope": "entity.name.variable.event, keyword.operator.logical, keyword.operator.relational",
                "settings": {
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                }
            },
            { // : + = * / -
                "scope": "punctuation.terminator.statement.cs, keyword.operator, punctuation.separator.parameter, entity.name.function.member.overload.cs",
                "settings": {
                    "foreground": "#b3b3ac",
                    "fontStyle": ""
                }
            },
            { // ;
                "scope": "punctuation.terminator.statement.tsx, punctuation.terminator.statement.cs, punctuation.terminator.java, punctuation.terminator.statement.ts",
                "settings": {
                    "foreground": "#565655",
                    "fontStyle": ""
                }
            },
            { // quotes as in ' "
                "scope": "punctuation.definition, punctuation.definition.string.begin, punctuation.definition.string.end",
                "settings": {
                    "foreground": "#ce9178",
                    "fontStyle": ""
                }
            },
            { // STATIC Methods
                "scope": "support, support.function, support.other.variable, variable.other.object.ts, storage.type.event.cs",
                "settings": {
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                }
            },

            // {   // Nao definido
            //     "scope": "entity.name.type", "settings": {
            //         "foreground": "#fffffff5", "fontStyle": ""
            // }},

            { // @Annotation java
                "scope": "storage.type.annotation.java, punctuation.definition.annotation",
                "settings": {
                    "foreground": "#c0c0c0",
                    "fontStyle": "italic"
                }
            },
            { // FIELD   AND   field in this.FIELD
                "scope": "text.html.derivative, entity.name.variable.field.cs, variable.other.enummember, entity.name.variable.property.cs, variable.other.constant.property, variable.other.property, variable.other.object.property, support.variable.property",
                "settings": {
                    // "foreground": "#ffffff", "fontStyle": "bold"
                    "foreground": "#ffffff",
                    "fontStyle": ""
                }
            },
            { // null
                "scope": "constant.language.java, constant.language.null.cs",
                "settings": {
                    "foreground": "#FF2E97",
                    "fontStyle": "normal"
                }
            },
            { // == !=
                "scope": "keyword.operator.comparison",
                "settings": {
                    "foreground": "#FF1BF0",
                    "fontStyle": ""
                }
            },
            { // text - xml
                "scope": "text.xml, storage",
                "settings": {
                    "foreground": "#ffffff",
                    "fontStyle": ""
                }
            },
            { // text - xml
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#FFB86C",
                    "fontStyle": "italic"
                }
            },
            { // text - xml
                "scope": "constant.numeric",
                "settings": {
                    // "foreground": "#4DE0FF", "fontStyle": ""
                    // "foreground": "#FF1BF0",
                    "fontStyle": ""
                }
            },
        ]
    },



