{
    // JAVA CONFIGURATIONS
    "spring-boot.ls.java.home": "/usr/lib/jvm/java-17-openjdk-amd64/",
    "java.jdt.ls.java.home": "/usr/lib/jvm/java-17-openjdk-amd64/",
    "maven.terminal.useJavaHome": true,
    "java.maven.downloadSources": true,
    "java.eclipse.downloadSources": true,
    "java.inlayHints.parameterNames.enabled": "all",
    "java.format.settings.url": "https://raw.githubusercontent.com/victordalosto/Dalosto/master/configs/java-formatter.xml",
    // "terminal.integrated.env.windows": { "PYTHONPATH": "${workspaceFolder}" },
    // "java.debug.settings.vmArgs": "-Xmx8g",



    "files.exclude": {
        "**/.gitignore": true,
        "**/.git": true,
        "**/.github":true,
        
        "**/.idea": true,
        "**/Dockerfile": true,

        "**/.mvn": true,
        "**/mvnw": true,
        "**/mvnw.cmd": true,
        "**/LICENSE": true,
        "**/HELP.md": true,
            
        "**/__pytorch__": true,
        "**/__pycache__":true,

        "**/gradlew": true,
        "**/.gradle": true,
        "**/settings.gradle": true,
        "**/gradlew.bat": true,
        "**/gradle": true,
        "**/build": true,
        "**/bin": true,

        // "node_modules": true,
        // "**/package-lock.json": true,
        // "**/servidor-api": true,


        // "**/build.gradle": true,
        // "**/pom.xml": true,
        
        "**/.vscode": true,
        // "**/Readme.md": true,
        
        // "**/src/test/**": true,
        "**/target/**": true
},



    // CONFIGS
    "editor.foldingImportsByDefault": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "vsintellicode.modify.editor.suggestSelection": "disabled",
    "workbench.editor.enablePreview": false,
    "terminal.explorerKind": "external",



    // GUI
    "workbench.tree.renderIndentGuides": "always",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Dracula",



    // VISUAL
    "editor.minimap.enabled": false,
    "editor.fontFamily": " Consolas, monaco monospace, 'Courier New'",
    "explorer.sortOrder": "filesFirst",
    "workbench.tree.indent": 5,



    // Other ui
    "editor.showFoldingControls": "always",
    "breadcrumbs.enabled": false,
    "window.zoomLevel": 2,
    "workbench.tips.enabled": false,
    "workbench.statusBar.visible": false,



    // VSCODE CUSTOMIZATION
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#FC618D", // class
        "editorBracketHighlight.foreground2": "#5ecfe9", // methods
        "editorBracketHighlight.foreground3": "#50FA7B", // blocks-inside-methods
        "editorBracketHighlight.foreground4": "#ffffff", // additional
        "editorBracketHighlight.foreground5": "#DED55E", // additional2
        
        "sideBar.background": "#141317", // dracula
        "editor.background": "#141317", // dracula
        "editorGutter.background": "#141317",
        // "sideBar.foreground": "#858383",
        "terminal.background": "#141317",
        "panel.background": "#141317",
        "activityBar.background": "#000000"
    },



    // EXTENSIONS
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },

    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
    "window.menuBarVisibility": "compact",



    // CUSTOMIZATION
    "editor.tokenColorCustomizations": {
        "textMateRules": [

            {   // IMPORTS, PACKAGE, 
                "scope": "keyword.control.import.ts, keyword.control.from.ts, storage.modifier.import.java, entity.name.namespace, storage.modifier.package.java, meta.package.java, punctuation.separator.java, keyword.other.import.java, keyword.other.package.java", "settings": {
                    "foreground": "#888886", "fontStyle": ""
            }}, 

            {   // @Annotation java
                "scope": "storage.type.annotation.java, punctuation.definition.annotation", "settings": {
                    "foreground": "#289e98",
                    "fontStyle": "italic"
            }}, 

            {   // ACESSOR: public, private, proteced
                "scope": "storage.modifier.java, storage.modifier.ts", "settings": {
                    "foreground": "#FC618D", "fontStyle": ""
            }}, 

            {   // Types
                "scope": "meta.method.identifier.java, entity.name.type.ts, storage.type.primitive.java, support.type.primitive.ts, entity.name.type.class, support.class, entity.name.type.interface", "settings": {
                    "foreground": "#5AD4E6",
                    "fontStyle": ""
            }}, 

            {   // const, let, var
                "scope": "variable.other, storage.type", "settings": {
                    "foreground": "#FC618D", "fontStyle": ""
            }}, 
            
            {   // methods
                "scope": "entity.name.function, variable.other.object.ts", "settings": {
                    "foreground": "#50FA7B", "fontStyle": ""
            }}, 
        
            {   // FIELD   AND   field in this.FIELD
                "scope": "variable.other.property, variable.other.object.property, support.variable.property", "settings": {
                    "foreground": "#ffffffda",
                    "fontStyle": "bold"
            }}, 

            {   // variable method parameter
                "scope": "variable.parameter", "settings": {
                  "foreground": "#ffffff", "fontStyle": ""
            }}, 

            {   // variable created inside method
                "scope": "variable.other.constant", 
                "settings": {
                    "foreground": "#ffffff", 
                    "fontStyle": ""
            }}, 

            {   // String
                "scope": "string", "settings": {
                    "foreground": "#ded55e",
                    "fontStyle": "italic"
            }}, 

            {   // keywords
                "scope": "keyword.control, punctuation.definition.tag.end.html, punctuation.definition.tag.begin.html", "settings": {
                    "foreground": "#FC618D", "fontStyle": ""
            }}, 

            {   // this
                "scope": "keyword, keyword.operator.new, keyword.control.java, variable.language.this.java,variable.language.this.ts", "settings": {
                    "foreground": "#FC618D", "fontStyle": ""
            }}, 

            {   // ponctuator
                "scope": "ponctuation, punctuation.definition, meta.brace, punctuation.section, punctuation.bracket.round", "settings": {
                    "foreground": "#FC618D", "fontStyle": ""
            }}, 

            { // ;
                "scope":"punctuation.terminator.java, punctuation.terminator.statement.ts", "settings": {
                    "foreground": "#565655", "fontStyle": ""
                }
            },

            { // .
                "scope": "punctuation.separator.period.java, ponctuation.acessor, punctuation.accessor.ts", "settings": {
                    "foreground": "#9f9f99", "fontStyle": ""
                }
            },

            { // : + = * / -
                "scope": "keyword.operator, punctuation.separator.parameter", "settings": {
                    "foreground": "#9f9f99", "fontStyle": ""
                }
            },

            { // quotes as in ' "
                "scope": "punctuation.definition", "settings": {
                    "foreground": "#DED55E", "fontStyle": ""
                }
            },

            {   // STATIC Methods
                "scope": "support, support.function, support.other.variable, variable.other.object.ts", "settings": {
                    "foreground": "#BD93F9", "fontStyle": ""
            }}, 

            {   // Nao definido
                "scope": "entity.name.type", "settings": {
                    "foreground": "#ffffff", "fontStyle": ""
            }},

            {   // Others
                "scope": "constant.numeric", "settings": {
                    "fontStyle": ""
            }}

        ]
    },



    // SECURITY
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "onFocusChange",
    "terminal.integrated.defaultProfile.linux": "bash",
    "boot-java.rewrite.reconcile": true,



    // DISABLE ANNOYING BOX
    "editor.parameterHints.enabled": false, // disable pop-up box top
    "editor.inlineSuggest.enabled": true,
    // "editor.suggestOnTriggerCharacters": false,
    // "editor.suggest.showStatusBar": false,
    // "editor.inlineSuggest.suppressSuggestions": true,
    // "editor.suggest.selectionMode": "never",
    // "editor.suggest.matchOnWordStartOnly": false,
    // "editor.suggest.showEvents": false,
    // "editor.suggest.showKeywords": false,
    // "editor.suggest.showModules": false,
    // "editor.suggest.showProperties": false,
    // "editor.suggest.showSnippets": false,
    // "editor.suggest.showUnits": false,
    // "editor.suggest.showWords": false,
    // "editor.inlineSuggest.enabled": true,



    // UI
    "redhat.telemetry.enabled": true,
    "[python]": {"editor.formatOnType": true},
    "[jsonc]": {"editor.defaultFormatter": "vscode.json-language-features"},
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "chatgpt.lang": "en"
    
    

    // NEW CONFIGS:


}
