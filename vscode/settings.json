{
    // VISUAL
    "editor.minimap.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": " Consolas, monaco, monospace, 'Courier New'",
    "editor.tokenColorCustomizations": {"textMateRules": [{ // Java annotation theme to override workbench.colorTheme
    "scope": "meta.declaration.annotation.java, storage.type.annotation.java, punctuation.definition.annotation-arguments.begin.bracket.round.java, punctuation.definition.annotation-arguments.end.bracket.round.java",
    "settings": { "foreground": "#989191", "fontStyle": "italic"
    }}]},


    // EXTENSIONS CONFIGURATIONS
    "breadcrumbs.enabled": false,
    "files.autoSave": "onFocusChange",
    "editor.foldingImportsByDefault": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",


    // JAVA CONFIGURATIONS
    "java.inlayHints.parameterNames.enabled": "all",
