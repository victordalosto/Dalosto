{
    // VISUAL
    "editor.minimap.enabled": false,
    "editor.fontFamily": " Consolas, monaco monospace, 'Courier New'",
    "explorer.sortOrder": "filesFirst",
    "workbench.tree.indent": 14,


    // SECURITY
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "onFocusChange",
    "editor.foldingImportsByDefault": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",


    // JAVA CONFIGURATIONS
    // "spring-boot.ls.java.home": "C:/Java/jdk-18.0.2.1",
    "java.jdt.ls.java.home": "C:\\Program Files\\Amazon Corretto\\jdk17.0.6_10",
    "maven.terminal.useJavaHome": true,
    "java.maven.downloadSources": true,
    "java.eclipse.downloadSources": true,
    "java.inlayHints.parameterNames.enabled": "all",
    "java.format.settings.url": "https://raw.githubusercontent.com/victordalosto/Dalosto/master/configs/java-formatter.xml",
    // "java.debug.settings.hotCodeReplace": "auto",
    // "java.debug.settings.console": "externalTerminal",
    "java.debug.settings.vmArgs": "-Xmx8g",
    


    // Excluded from view
    "files.exclude": {
        ".mvn": true,
        ".idea": true,
        "mvnw": true,
        "mvnw.cmd": true,
        "target/**": true,
        
        ".vscode": true,
        ".gitignore": true,
        "HELP.md": true,
        "pom.xml": true,
        "**/src/test/**": true
    },
    
    // THEME
    "workbench.sideBar.location": "right",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorTheme": "IntelliJ Neo Dark",
    "workbench.iconTheme": "eq-material-theme-icons-light",
    

    // VSCODE CUSTOMIZATION
    "workbench.colorCustomizations": {
        // "editorBracketHighlight.foreground1": "#5ecfe9", // class
        // "editorBracketHighlight.foreground2": "#f0359f", // methods
        "sideBar.background": "#313335", //"sideBar.background": "#26242c",
        "editor.background": "#272626", //"editor.background": "#26242c",
        "editorGutter.background": "#292929"
        // "sideBar.foreground": "#fbf9f9",
        // "terminal.background": "#26242c",
        // "panel.background": "#26242c",
        // "activityBar.background": "#000000",
    },
    
    

    // EXTENSIONS
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },


    // CUSTOMIZATION
    "editor.tokenColorCustomizations": {
        "textMateRules": [

            {   // IMPORTS, PACKAGE, 
                "scope": "keyword.other, entity.name",
                "settings": {
                    "foreground": "#888886",
                }
            }, 

            {   // ANOTTATIONS
                "scope": "entity.name.type.annotation, meta.declaration.annotation, storage.type.annotation, punctuation.definition.annotation.java",
                "settings": {
                    // "foreground": "#bcb7b7",
                    "fontStyle": "italic",
                }
            },

            { // Type for Intellij Theme
                "scope": "storage.type",
                "settings": {
                    "foreground": "#6094b5" // Replace with your desired color value
                }
            },

            { // Type for Intellij Theme
                "scope": "storage.type.java",
                "settings": {
                    "fontStyle": "bold",
                }
            },

